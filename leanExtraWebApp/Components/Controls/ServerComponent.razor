

@if(server is not null)
{
<div style="color: @(server.IsOnline ? "green" : "red")">
    @server.Name is in @server.City and the @server.Name is @(server.IsOnline ? "online" : "offline")
&nbsp;
<button type="button" class="btn btn-primary" @onclick="statuschange">Turn on/Off</button>
</div>

}
@code {
  
        private Server? server = new Server { Name = "Server1", City = "Toronto" };
   
   private void statuschange()
   {
    if(server is not null)
    {
        server.IsOnline = !server.IsOnline;
    }
   }

}
